
@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit @Html.DisplayFor(model => model.EngineerName)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  <div class="form-group">
    @Html.LabelFor(model => model.EngineerName)
    @Html.TextBoxFor(model => model.EngineerName)
  </div>
  <input type="submit" value="update" class="btn btn-outline-dark"/>
}

<p>@Html.ActionLink("Engineer Index", "Index")</p>
<p>@Html.ActionLink("Add machine", "AddMachine",  new { id = Model.EngineerId })</p>