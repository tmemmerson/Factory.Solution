@{
  Layout = "_Layout";
}

@using Factory.Models
@model IEnumerable<Factory.Models.Engineer>

<h1>Engineers:</h1>

@if(@Model.Count() == 0)
{
  <p>Presently there are no engineers on payroll</p>
}
else
{
  <ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
