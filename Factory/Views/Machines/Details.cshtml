@{
  Layout = "_Layout";
}

@using Factory.Models;
@model Factory.Models.Machine

<h1>Machine Details</h1>
<hr />
<h2>@Html.DisplayFor(model => model.MachineType)</h2>

@if(@Model.Statuses.Count() == 0)
{
  <p>this machine has no status indicators.</p>
}
else
{
  <h4>Status Notes:</h4>
  <ul>
    @foreach(Status status in Model.Statuses)
    {
      <li>@status.StatusCondition</li>
    }
  </ul>
}

@if(@Model.Engineers.Count() == 0)
{
  <p>no engineer is assigned to this machine</p>
}
else
{
  <h4>Engineers: </h4>
  <ul>
    @foreach(var join in Model.Engineers)
    {
      <li>@Html.ActionLink($"{join.Engineer.EngineerName}", "Details", "Engineers", new { id = @join.Engineer.EngineerId})</li>
      @using (Html.BeginForm("DeleteEngineer", "Machines"))
      {
        @Html.Hidden("joinId", @join.MachineEngineerId)
        @Html.Hidden("machineId", Model.MachineId);
        <input type="submit" value="Remove" />
      }
    }
  </ul>
}

<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
