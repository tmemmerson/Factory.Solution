@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add an Engineer</h1>

<h4>Add an engineer to this machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)
  <div class="form-group">
    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")
  </div>
    <input type="submit" value="Save" class="btn btn-outline-dark"/>
}

<p>@Html.ActionLink("Back to machines", "Index")</p>