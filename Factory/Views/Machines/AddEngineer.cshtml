@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add Engineer</h1>

<h4>Add an Engineer to this machine: @Html.DisplayFor(model => model.MachineType)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to machines", "Index")</p>